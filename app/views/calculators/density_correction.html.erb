<header class="calculator-header p-5 flex items-center justify-between z-50 top-0 left-0 w-full">
  <h1 class="text-gray-800 text-3xl mx-auto">Density correction</h1>
</header>

<div class="flex flex-1 flex-col p-8 min-h-max">
  <%= form_with url: calculators_calculate_density_correction_path, local: true, id: "density-form",
                class:"border-4 rounded-2xl border-gray-100 pt-10 pb-20",
                data: {controller: "density", action: "submit->density#correctDensity" } do %>
    <div class="flex flex-col space-y-2 mb-8">
      <%= label_tag :measured_density, "Measured Density", class:"text-xl text-center self-center" %>
      <%= number_field :measured_density, nil, step: 0.001, required: true, data: {density_target: "measured_density"},
                        class:"w-52 self-center rounded-md border-gray-300 focus:border-gray-600 focus:ring-gray-500 p-2" %>
    </div>
    <div class="flex flex-col space-y-2 mb-8">
      <%= label_tag :current_temp, "Current Temperature (°C):", class:"text-xl text-center self-center"%>
      <%= number_field :current_temp, nil, step: 0.001, required: true, data: {density_target: "current_temp"},
                        class:"w-52 self-center rounded-md border-gray-300 focus:border-gray-600 focus:ring-gray-500 p-2" %>
    </div>
      <div class="flex flex-col space-y-2 mb-8">
      <%= label_tag :densimeter_temp, "Densimeter Temperature (°C):", class:"text-xl text-center self-center" %>
      <%= number_field :densimeter_temp, nil, step: 0.001, required: true, data: {density_target: "densimeter_temp"},
                        class:"w-52 self-center rounded-md border-gray-300 focus:border-gray-600 focus:ring-gray-500 p-2" %>
    </div>
    <div class="flex justify-center mb-10">
      <%= submit_tag "Correct Density", class:"self-center border border-gray-800 rounded-lg text-lg px-5 py-2.5
                                               text-center me-2 mb-2 transition-all ease-in-out",
                                        data: {density_target:"correctDensity"} %>
    </div>
    <div class="flex flex-row items-center justify-center space-x-2">
      <p class="absolute hidden text-gray-600 font-semibold text-3xl" data-density-target="corrected_density"></p>
    </div>
  <% end %>
</div>

<footer class="bg-white p-2 flex items-center justify-center fixed bottom-0 w-1/2 left-1/2 transform -translate-x-1/2 shadow-top z-10 rounded-md">
  <div class="self-center">
    <%= link_to calculators_index_path, class: '' do %>
      <%= image_tag cl_image_path("brewery_inventory/back"), class: 'w-14' %>
    <% end %>
  </div>
</footer>
