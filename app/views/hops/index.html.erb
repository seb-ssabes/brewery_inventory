<form class="search-form w-full max-w-md mx-auto p-4 bg-white rounded-lg shadow-md"
      data-controller="search">
  <input type="text" id="hopSearch" placeholder="Hop name"
         data-search-action="input->search#searchInput"
         data-search-target="input"
         class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none
                focus:ring-2 focus:ring-gray-500 transition duration-200" />
  <ul class="suggestions bg-white border border-gray-200 rounded-md mt-2 shadow-sm
             overflow-hidden transition-opacity duration-300 ease-in-out"
      data-search-target="suggestions" id="hopSuggestions">
  </ul>
</form>
