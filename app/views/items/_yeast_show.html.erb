<div class="header">
  <h1><%= @item.name %></h1>
  <%= link_to "X", category_path(3) %>
</div>
<div class="item">
  <div class="item-show-card">
    <p>Name: <%= @item.name %></p>
    <p>Quantity: <%= ActiveSupport::NumberHelper.number_to_delimited(@item.quantity.to_i, delimiter: '.') %><%= @item.unit %></p>
    <p>Price: $<%= ActiveSupport::NumberHelper.number_to_delimited(@item.price.to_i, delimiter: '.') %></p>
    <p>Origin: <%= @item.origin %></p>
    <p>Supplier: <%= @item.supplier %></p>
    <p>Attenuation: <%= number_with_precision(@item.attenuation, precision: (@item.attenuation % 1 == 0 ? 0 : 1)) %>%</p>
    <p>Type: <%= @item.item_type %></p>
    <p>Form: <%= @item.form %></p>
    <p>Expiring date: <%= @item.date %></p>
    <p>Notes: <%= @item.notes %></p>
  </div>
</div>

<%= button_to "Delete Yeast", category_item_path(@item.category, @item), method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to "Edit Yeast", edit_category_item_path(@category, @item) %>
