<% if flash[:notice] %>
  <div id="flash-notice" class="z-50 fixed bottom-20 left-1/2 transform -translate-x-1/2 bg-white text-black text-md text-center px-10 py-2 border-4 border-gray-300 rounded-md transition-opacity duration-1000 ease-in-out opacity-0" data-controller="toast">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:alert] %>
  <div id="flash-notice" class="z-50 fixed bottom-20 left-1/2 transform -translate-x-1/2 bg-white text-black text-md text-center px-4 py-2 border-4 border-gray-300 rounded-md transition-opacity duration-1000 ease-in-out opacity-0 whitespace-nowrap" data-controller="toast">
    <%= flash[:alert] %>
  </div>
<% end %>
