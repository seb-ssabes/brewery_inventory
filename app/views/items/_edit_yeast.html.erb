<%= form_with(model: [@category, @item], local: true) do |form| %>

  <header class="bg-gray-100 p-5 flex items-center justify-center relative">
    <div class="field font-bold">
      <%= form.text_field :name, placeholder: 'Enter hop name', class: "text-3xl border-none bg-gray-100 text-center" %>
    </div>
  </header>

  <div class="container p-6">
    <div class="grid grid-cols-2 gap-4">
      <div class="rows-span-2">
        <%= form.label :quantity, class: 'block' %>
        <%= form.number_field :quantity, value: @item.quantity.to_i, placeholder: 'Enter quantity in grams', class: 'w-full text-4xl font-semibold rounded-md border-gray-300 py-11' %>
      </div>

      <div class="grid grid-rows-2 gap-4 rows-span-1">
        <div class="mb-1.5">
          <%= form.label :price, class: 'block' %>
          <%= form.number_field :price, step: 'any', value: ActiveSupport::NumberHelper.number_to_delimited(@item.price.to_i, delimiter: '.'), placeholder: 'Price per 100g', class: 'w-full rounded-md border-gray-300 p-2' %>
        </div>

        <div class="field">
          <%= form.label :attenuation, class: 'block' %>
          <%= form.number_field :attenuation, step: 0.01, value: number_with_precision(@item.attenuation, precision: (@item.attenuation % 1 == 0 ? 0 : 1)), placeholder: 'Enter Attenuation', class: 'w-full rounded-md border-gray-300 p-2' %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4 mt-4">
      <div class="">
        <%= form.label :origin %>
        <%= form.text_field :origin, placeholder: 'Enter origin country', class: "w-full rounded-md border-gray-300 p-2" %>
      </div>

      <div class="">
        <%= form.label :supplier %>
        <%= form.text_field :supplier, placeholder: 'Enter supplier name', class: "w-full rounded-md border-gray-300 p-2" %>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4 mt-4">
      <div class="">
        <%= form.label :form, 'Form', class: 'block' %>
        <%= form.select :form, options_for_select(['Dry', 'Liquid', 'Culture', 'Slurry'], @item.form),
                               prompt: 'Select form',
                               class: 'block w-full rounded-md border-gray-300 p-2 text-base focus:ring-indigo-500
                                      focus:border-indigo-500 sm:text-sm !important'
        %>
      </div>
      <div class="">
        <%= form.label :item_type, 'Type', class: 'block' %>
        <%= form.select :item_type, options_for_select(['Ale', 'Lager', 'Hybrid', 'Wheat', 'Wine', 'Champagne', 'Other'], @item.item_type),
                                    prompt: 'Select malt category',
                                    class: 'block w-full rounded-md border-gray-300 p-2 text-base focus:ring-indigo-500
                                            focus:border-indigo-500 sm:text-sm !important'
        %>
      </div>
    </div>

    <div class="mt-4">
      <%= form.label :date, 'Expiring date' %>
      <%= form.date_field :date, value: Date.today, class: "w-full rounded-md border-gray-300 p-2" %>
    </div>

    <div class="col-span-2 mt-4">
      <%= form.label :notes %>
      <%= form.text_area :notes, placeholder: 'Enter additional notes', rows: 4, class: "w-full rounded-md border-gray-300 p-3" %>
    </div>
  </div>

  <footer class="bg-gray-100 pb-3 flex items-center justify-center fixed bottom-0 mx-40" style="z-index: 10;">
    <div class="flex items-center w-full px-3">
      <div class="actions">
        <%= form.submit 'SAVE', class: '' %>
      </div>
    </div>
  </footer>

<% end %>

<footer class="bg-gray-100 p-3 flex items-center justify-center fixed bottom-0 w-full" style="z-index: 1;">
  <div class="flex items-center justify-between w-full px-3">
    <%= button_to category_item_path(@item.category, @item), method: :delete, data: { confirm: 'Are you sure?' }, class: "flex items-center justify-center" do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>
    <p><%= link_to "<-", category_path(3), class: 'items-center justify-center' %></p>
  </div>
</footer>




