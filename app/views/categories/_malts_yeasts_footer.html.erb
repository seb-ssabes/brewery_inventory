<footer class="bg-white p-2 flex items-center justify-center space-x-7 fixed bottom-0 left-1/2 transform -translate-x-1/2 shadow-top z-10 rounded-md w-1/2">
  <div class="">
    <%= link_to new_category_item_path(@category), class: "mx-auto" do %>
      <%= image_tag case @category.name
                    when 'Hops'
                      cl_image_path("brewery_inventory/hop-new")
                    when 'Malts'
                      cl_image_path("brewery_inventory/malt-new")
                    else
                      cl_image_path("brewery_inventory/yeast-new")
                    end,
                    class: "mx-auto w-14" %>
    <% end %>
  </div>
  <div class="">
    <%= link_to categories_path, class: '' do %>
      <%= image_tag cl_image_path("brewery_inventory/back"), class: 'w-10' %>
    <% end %>
  </div>
</footer>
