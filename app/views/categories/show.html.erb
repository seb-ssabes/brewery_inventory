<div class="relative">
  <header class="<%= case @category.name
                     when "Hops" then "hops-header"
                     when "Malts" then "malts-header"
                     else "yeasts-header"
                     end %> p-5 flex items-center justify-between z-50 fixed top-0 left-0 w-full">
    <div class="flex-1"></div>
    <h1 class="text-gray-800 flex-grow text-center text-3xl mx-auto"><%= @category.name %></h1>
    <div class="flex justify-end">
      <label class="inline-flex items-center me-1 cursor-pointer">
        <span class="ms-3 text-sm font-medium text-gray-400 dark:text-gray-300 mr-3"></span>
        <input type="checkbox" value="" class="sr-only peer" checked>
        <div class="relative w-11 h-6 bg-gray-300 rounded-full peer dark:bg-gray-400 dark:peer-focus:ring-gray-400 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-gray-500"></div>
        <span class="ms-3 text-sm font-medium text-gray-400 dark:text-gray-300"></span>
      </label>
    </div>
  </header>


  <div class="items p-4 relative bg-white z-10 content-container">
    <div class="item">
      <% if @items.any? %>
        <ul class="flex flex-col gap-4 mb-16" data-controller="sort"
                                              data-action="toggle->sort#handleSort">
          <% @items.sort_by { |item| -item.quantity }.each do |item| %>
            <%= link_to edit_category_item_path(@category, item), class: 'block' do %>
              <li data-controller="card"
                  data-action="click->card#handleClick"
                  data-url="<%= edit_category_item_path(@category, item)%>">
                <% if item.category.name == 'Hops' %>
                  <%= render 'hops_index', item: item %>
                <% elsif item.category.name == 'Malts' %>
                  <%= render 'malts_index', item: item %>
                <% elsif item.category.name == 'Yeasts' %>
                  <%= render 'yeasts_index', item: item %>
                <% end %>
              </li>
            <% end %>
          <% end %>
        </ul>
      <% else %>
        <div class="empty-category">
          <p>No <%= @category.name %> has been added yet.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div data-controller="toast">
  <% if flash[:notice] %>
    <div id="flash-notice" data-toast-target="notice" class="z-50 fixed bottom-20 left-1/2 transform -translate-x-1/2 bg-white text-black text-md text-center px-8 py-2 border-4 border-gray-300 rounded-md transition-opacity duration-1000 ease-in-out opacity-0">
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>

<footer class="bg-white p-2 flex items-center justify-center space-x-7 fixed bottom-0 left-1/2 transform -translate-x-1/2 shadow-top z-10 rounded-md w-1/2">
    <div class="">
      <%= link_to new_category_item_path(@category), class: "mx-auto" do %>
        <%= image_tag case @category.name
                      when 'Hops'
                        cl_image_path("brewery_inventory/hop-new")
                      when 'Malts'
                        cl_image_path("brewery_inventory/malt-new")
                      else
                        cl_image_path("brewery_inventory/yeast-new")
                      end,
                      class: "mx-auto w-14" %>
      <% end %>
    </div>
    <div class="">
      <%= link_to root_path, class: '' do %>
        <%= image_tag cl_image_path("brewery_inventory/back"), class: 'w-10' %>
      <% end %>
    </div>
</footer>
