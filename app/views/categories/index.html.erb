<div class="bg-gray-100 p-6 flex items-center justify-center">
  <h1 class="text-3xl font-bold mb-0">Inventory</h1>
</div>

<div class="categories">
  <ul>
    <% @categories.each do |category| %>
      <%= link_to category_path(category), class: 'category-link' do %>
        <li class="category-card">
          <div class="icon">
            <% if category.name == 'Hops' %>
              <i class="fa-solid fa-leaf"></i>
            <% elsif category.name == 'Malts' %>
              <i class="fa-solid fa-wheat-awn"></i>
            <% elsif category.name == 'Yeasts' %>
              <i class="fa-solid fa-flask"></i>
            <% end %>
          </div>
          <div class="category-content">
            <h3><%= category.name %></h3>
            <p><%= category.items.count %></p>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
