<header class="inventory-header p-5 flex items-center justify-between z-50 top-0 left-0 w-full">
  <h1 class="text-gray-800 text-3xl mx-auto">Inventory</h1>
</header>

<div class="flex flex-1 flex-col p-5">
  <ul class="flex flex-col gap-5">
    <% @categories.each do |category| %>
      <%= link_to category_path(category), class: 'block' do %>
        <li class="flex items-center justify-between p-6 shadow-md border-2 rounded-lg space-x-6">
          <div class="icon flex justify-center flex-shrink-0 w-1/4 text-4xl ml-7">
            <% if category.name == 'Hops' %>
              <img src= "<%= asset_path('hop-medium-light.png') %>">
            <% elsif category.name == 'Malts' %>
              <img src= "<%= asset_path('malt-low.png') %>">
            <% elsif category.name == 'Yeasts' %>
              <img src= "<%= asset_path('yeast.png') %>">
            <% end %>
          </div>
          <div class="category-content flex flex-col items-center w-3/4">
            <h3 class="text-2xl"><%= category.name %></h3>
            <p class="flex-shrink-0 text-xl"><%= category.items.count %></p>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
