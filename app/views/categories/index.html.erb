<header class="inventory-header p-5 flex items-center justify-between z-50 top-0 left-0 w-full">
  <h1 class="text-gray-800 text-3xl mx-auto">Inventory</h1>
</header>

<div class="flex flex-1 flex-col p-5">
  <ul class="flex flex-col gap-5">
    <% @categories.each do |category| %>
      <%= link_to category_path(category), class: 'block' do %>
        <li class="flex items-center justify-between p-6 shadow-md border-2 rounded-lg space-x-6"
            data-controller="card"
            data-action="click->card#handleClick"
            data-url="<%= category_path(category) %>">
          <div class="category-content flex flex-col items-center w-3/4 mr-24">
            <h3 class="text-2xl"><%= category.name %></h3>
            <p class="flex-shrink-0 text-xl"><%= category.items.count %></p>
          </div>
          <div class="icon flex justify-center flex-shrink-0 w-1/4 text-4xl ml-7">
            <% if category.name == 'Hops' %>
              <img src= "<%= cl_image_path("brewery_inventory/hop-medium-light") %>">
            <% elsif category.name == 'Malts' %>
              <img src= "<%= cl_image_path("brewery_inventory/malt-medium-light") %>">
            <% elsif category.name == 'Yeasts' %>
              <img src= "<%= cl_image_path("brewery_inventory/yeast") %>">
            <% end %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

<footer class="bg-white p-2 flex items-center justify-center fixed bottom-0 w-1/2 left-1/2 transform -translate-x-1/2 shadow-top z-10 rounded-md">
  <div class="self-center">
    <%= link_to root_path, class: '' do %>
      <%= image_tag cl_image_path("brewery_inventory/back"), class: 'w-14' %>
    <% end %>
  </div>
</footer>
